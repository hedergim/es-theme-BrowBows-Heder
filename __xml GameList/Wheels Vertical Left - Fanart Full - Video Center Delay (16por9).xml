<!---------------------------grid------------------------------------- -->

<!-- lista dos jogos -->
 <customView name="Wheels Vertical Left - Fanart Full - Video Center Delay (16:9)" inherits="grid">
<imagegrid name="gamegrid">
<!--  config para 9 Wheels grid
	  <pos>-0.290 -0.110</pos>
      <size>0.800 1.200</size>
-->
	  <pos>-0.295 -0.200</pos>
      <size>0.800 1.400</size>
<!--	  <Transition>instant</Transition>   -->
      <padding>0.280 0.100 0.280 0.100</padding>
      <scrollDirection>vertical</scrollDirection>
      <autoLayout>1 7</autoLayout>
      <autoLayoutSelectedZoom>1.15</autoLayoutSelectedZoom>
      <margin>-0.200 -0.200</margin>
      <centerSelection>true</centerSelection>
      <scrollLoop>true</scrollLoop>
	  <imageSource>marquee</imageSource>
	  <zIndex>40</zIndex>         		
    </imagegrid>
	
<gridtile name="default">
      <padding>64 16</padding>
      <backgroundCenterColor>FFFFFF00</backgroundCenterColor>
      <backgroundEdgeColor>FFFFFF00</backgroundEdgeColor>
      <imageSizeMode>maxSize</imageSizeMode>
      <imageColor>FFFFFF</imageColor>
      <reflexion>0 0.0</reflexion>
    </gridtile>
	  
<!--  Exibe menu de ajuda: Selecionar, voltar, etc...  -->	 
     <helpsystem name="help">
     <textColor>ffff00</textColor>
     <origin>0.5 0.5</origin>
     <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
     <fontSize>0.018</fontSize>     
     <pos>0.475 0.9784</pos>  
   </helpsystem>
	
