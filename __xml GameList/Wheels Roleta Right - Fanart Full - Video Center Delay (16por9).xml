<!---------------------------gamecarousel------------------------------------- -->


<!-- lista dos jogos -->
 <customView name="Wheels Roleta Right - Fanart Full - Video Center Delay (16:9)" inherits="gamecarousel">
	<gamecarousel name="gamecarousel">
		<type>vertical_wheel</type>
		<pos>0.39 0</pos>
		<size>1 1</size>
		<logoScale>1.2</logoScale>
		<logoSize>0.150 0.260</logoSize>
		<maxLogoCount>8</maxLogoCount>
<!-- distancia entre as logos -->		
		<logoRotation>-9</logoRotation>
		<logoRotationOrigin>3.5 0.5</logoRotationOrigin>
		<logoAlignment>center</logoAlignment>   
		<imageSource>marquee</imageSource>
		<zIndex>43</zIndex> 
	</gamecarousel> 

<!-- Texto do Carrossel quando nao tem a Logo -->		
    <text name="gamecarouselLogoText">
		<color>FFFFFFFF</color>
		<glowColor>00000050</glowColor>
		<glowSize>3</glowSize>
		<glowOffset>3</glowOffset>
		<lineSpacing>1.0</lineSpacing>
        <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
        <fontSize>0.030</fontSize>
    </text>

<!--  Exibe menu de ajuda: Selecionar, voltar, etc...  -->	 
     <helpsystem name="help">
     <textColor>ffff00</textColor>
     <origin>0.5 0.5</origin>
     <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
     <fontSize>0.018</fontSize>     
     <pos>0.475 0.9784</pos>  
   </helpsystem>
	
