<?xml version="1.0" encoding="UTF-8"?>
<theme>
<formatVersion>7</formatVersion>

<!-- 
Criado Heder Brobows Doido
Tema do menu Gamelist Obrigatorio
IMPORTANTE: para criar uma arte nos temas baseados nesses temas obrigatorios, a arte precisa existir nesse tema, 
            coloque essa tag para a arte existir mas nao aparecer nesse tema:
            <visible>false</visible>	  
-->
	 
<!---------------------------basic------------------------------------- -->

<!-- lista dos jogos -->
<view name="basic">	
    <textlist name="gamelist">
<!--  Tamanho da caixa das letras  -->		
    <size>0.230 0.715</size>
<!--  Fonte das letras  -->	
    <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
<!--  Tamanho das letras  -->
    <fontSize>0.023</fontSize>
<!--  Posicao das letras  -->		 
	<pos>0.015 0.216</pos>
<!--  Alinhamento das letras  -->		 
    <alignment>left</alignment> 
<!--  Espaco entre as palavras  -->	
	<lineSpacing>1.4</lineSpacing> 
<!--  Cor das letras  -->		 
	<primaryColor>ffff00</primaryColor>
<!--  Cor do seletor  -->		 
	<selectorColor>191970</selectorColor>
<!--  Cor do jogo Selecionado  -->
	<selectedColor>FFFFFFFF</selectedColor>	
<!--  profundidade da arte / sequencia de amostragem da arte  -->
	<zIndex>5</zIndex>	
</textlist>
 
<!--  Exibe menu de ajuda: Selecionar, voltar, etc...  -->	 
     <helpsystem name="help">
     <textColor>ffff00</textColor>
     <origin>0.5 0.5</origin>
     <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
     <fontSize>0.018</fontSize>     
     <pos>0.475 0.9784</pos>  
   </helpsystem>
	
<!-- WallPaper Por Sistema -->		
<image name="wallpaper_por_sistema" extra="true">
    <origin>0 0</origin>
    <pos>0 0</pos>
    <maxSize>1 1</maxSize>
    <path>./__xml Main Menu Wallpapers/MAIN MENU Wallpapers Consoles 01/${system.theme}.jpg</path>
	<path>./__xml Main Menu Wallpapers/MAIN MENU Wallpapers (Para 3 Niveis) 02/${system.theme}.jpg</path>
    <zIndex>1</zIndex> 
</image> 
  
<!-- Logo por Sistema, aproveita as Wheels dos sistemas -->	
<image name="logo">
	<origin>0.5 0.5</origin> 
	<pos>0.132 0.100</pos>
	<maxSize>0.220 0.150</maxSize>
	<path>./__xml Main Menu Wheels Logo/MAIN MENU Wheels Clean/${system.theme}.png</path>
	<path>./__xml Main Menu Wheels Logo/MAIN MENU Wheels (Para 3 Niveis) Galacticas/${system.theme}.png</path>
	<linearSmooth>true</linearSmooth>
	<zIndex>30</zIndex>
</image>

<!-- Arte extra Fixa Gamelist-->		
<image name="arte_extra_fixa_gamelist" extra="true">
    <origin>0 0</origin>
    <pos>0 0</pos>
    <maxSize>1 1</maxSize>
    <path>./__xml GameList/Artes Fixas/Basic Fundo.png</path>
    <zIndex>1</zIndex> 
</image> 

  
  
</view>

</theme>
